<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>FilterBeforeStudy</filter-name>
        <filter-class>filter.SelectFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterBeforeStudy</filter-name>
        <url-pattern>/study</url-pattern>
        <url-pattern>/study.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LogInController</servlet-name>
        <servlet-class>controller.LogInController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpController</servlet-name>
        <servlet-class>controller.SignUpController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudyController</servlet-name>
        <servlet-class>controller.StudyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportQuestionController</servlet-name>
        <servlet-class>controller.ReportQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutController</servlet-name>
        <servlet-class>controller.LogOutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddQuestion</servlet-name>
        <servlet-class>controller.AddQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewRankController</servlet-name>
        <servlet-class>controller.ViewRankController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SelectController</servlet-name>
        <servlet-class>controller.SelectController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListQuestionController</servlet-name>
        <servlet-class>controller.ListQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuizDetailController</servlet-name>
        <servlet-class>controller.QuizDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateQuestion</servlet-name>
        <servlet-class>controller.UpdateQuestion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteQuestion</servlet-name>
        <servlet-class>controller.DeleteQuestion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetQuestionController</servlet-name>
        <servlet-class>controller.ResetQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeAvatarController</servlet-name>
        <servlet-class>controller.ChangeAvatarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudyController</servlet-name>
        <url-pattern>/study</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportQuestionController</servlet-name>
        <url-pattern>/reportquestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddQuestion</servlet-name>
        <url-pattern>/addquestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewRankController</servlet-name>
        <url-pattern>/viewrank</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SelectController</servlet-name>
        <url-pattern>/select</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListQuestionController</servlet-name>
        <url-pattern>/listquestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuizDetailController</servlet-name>
        <url-pattern>/quizdetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateQuestion</servlet-name>
        <url-pattern>/updatequestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteQuestion</servlet-name>
        <url-pattern>/deletequestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetQuestionController</servlet-name>
        <url-pattern>/resetquestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeAvatarController</servlet-name>
        <url-pattern>/changeavatar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
